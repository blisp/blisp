  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${file}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "useWSL": true,
      "args": [
        "--allow-uncaught",
        "-r",
        "tsconfig-paths/register",
        "-r",
        "tests",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "'tests/**/*.spec.js'"
      ],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests Current",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "useWSL": true,
      "args": [
        "--allow-uncaught",
        "-r",
        "tsconfig-paths/register",
        "-r",
        "tests",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${relativeFile}"
      ],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
